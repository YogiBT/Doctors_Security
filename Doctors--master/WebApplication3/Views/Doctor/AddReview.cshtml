
@{
    ViewBag.Title = "Reviews";
    if (Session["UserLoggedIn"] != null)
    {
        Layout = "~/Views/Shared/_LayoutPatient.cshtml";
    }
    else if (Session["AdminLoggedIn"] != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (Session["DoctorLoggedIn"] != null)
    {
        Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
    }
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>

    .alert {
        padding: 20px;
        background-color: #f44336;
        color: white;
        opacity: 1;
        transition: opacity 0.6s;
        margin-bottom: 15px;
    }

        .alert.success {
            background-color: #4CAF50;
        }

        .alert.info {
            background-color: #2196F3;
        }

        .alert.warning {
            background-color: #ff9800;
        }

    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>
@{
    if (TempData["nonUser"] != null)
    {
        <h2>Alert Messages</h2>
        <div class="alert">
            <span class="closebtn">&times;</span>
            <strong>@TempData["nonUser"]</strong>
        </div>


    }

}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Reviews</h2>
<form action="AddReviewToDB" method="post">
    <table>

        <tr>
            <td>
                Enter ID of the User:
                <br />
                <input id="Text1" name="PID" type="text" />
            </td>
        </tr>
        <tr>

            <td>
                Enter Review:
                <br />
                <input id="Text2" name="Review" style="width:800px; font-size:15pt" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <input id="Submit1" type="submit" value="submit" />
            </td>
        </tr>
    </table>
    @*   new { txtID = Request.Form["txtID"].ToString(), txtPassword = Request.Form["txtPassword"].ToString() }*@

</form>




<table class="table">
    <tr>
        <th>User ID</th>
        <th>From</th>
        <th>Message</th>
        <th>Message ID</th>
    </tr>
    @foreach (var item in ViewBag.Reviews)
    {

        <tr>
            <td>@item.UserId  </td>

            <td>  @item.From </td>

            <td> @item.Message </td>

            <td>  @item.MessageID </td>

        </tr>

    }
</table>
